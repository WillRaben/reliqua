
<div class="card card-login mx-auto mt-5">
  <div class="card-header">
    Inicie Sessión
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label 'Correo de Usuario', class: 'sr-only-focusable' %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder:"e-mail" %>
    </div>
    <div class="form-group">
      <%= f.label 'Contraseña', class: 'sr-only-focusable' %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "escriba su contraseña" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="form-check">
          <label class="form-check-label">
            <%= f.check_box :remember_me %>
            <%= f.label "Recordarme", class: 'form-check-input' %>
          </label>
        </div>
      </div>
    <% end -%>
      <div class="actions">
        <%= f.submit "Entrar", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %> 
    </div>
  </div>
</div>

<script type="text/javascript">

$( document ).ready(function(){
    $('body').addClass("bg-dark");
  });

console.log($);

</script>