  <h2 class="form-signin-heading">Inicie Session</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="email">
      <%= f.label :email, class: 'sr-only-focusable' %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>

    <div class="password">
      <%= f.label :password, class: 'sr-only-focusable' %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="rememberable">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Entrar", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
<%= render "devise/shared/links" %> 